<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="5dp"
        android:elevation="10dp"
        android:id="@+id/cd_register_terms"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_height="150dp">

        <RelativeLayout
            android:id="@+id/rl_package_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--  start of Basic and Subscribe wala linear Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/basic_top_ll"
                android:layout_marginHorizontal="30dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Free"
                    android:id="@+id/tv_package_name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:text="subscribe"
                    android:layout_weight="1"
                    android:buttonTint="#2196F3"
                    android:checked="false"
                    android:id="@+id/rd_package_btn"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--  End of Basic and Subscribe wala linear Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_below="@+id/basic_top_ll"
                android:orientation="horizontal"
                android:id="@+id/basic_term_ll"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/rupee"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:id="@+id/tv_package_price"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_package_duration"
                    android:text=" / lifetime "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_below="@+id/basic_term_ll"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Includes Ads Promotions"
                    android:id="@+id/tv_package_desc"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>