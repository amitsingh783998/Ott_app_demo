<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginWithMobile"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:text="User Registeration"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/et_register_name"
            android:background="@drawable/my_background_edit_text"
            android:drawablePadding="10dp"
            android:hint="Enter Your Name"
            android:layout_marginHorizontal="30dp"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:layout_height="80dp"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:background="@drawable/my_background_edit_text"
            android:drawablePadding="10dp"
            android:hint="Enter the Email"
            android:id="@+id/et_register_email"
            android:layout_marginHorizontal="30dp"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:layout_height="80dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:background="@drawable/my_background_edit_text"
            android:drawablePadding="10dp"
            android:hint="Enter the Password"
            android:id="@+id/et_register_password"
            android:layout_marginHorizontal="30dp"
            android:inputType="textPassword"
            android:maxLength="12"
            android:layout_height="80dp"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:background="@drawable/my_background_edit_text"
            android:drawablePadding="10dp"
            android:hint="Enter the Mobile"
            android:id="@+id/et_register_mobile"
            android:layout_marginHorizontal="30dp"
            android:inputType="phone"
            android:maxLength="12"
            android:layout_height="80dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="5dp"
        android:elevation="10dp"
        android:id="@+id/cd_register_terms"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:id="@+id/ch_register_agree"
            android:buttonTint="@color/black"
            android:checked="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="I Agree to Terms and Condition *"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:textAllCaps="false"
        android:id="@+id/register_button"
        android:text="Register"
        android:layout_height="80dp"/>


</LinearLayout>